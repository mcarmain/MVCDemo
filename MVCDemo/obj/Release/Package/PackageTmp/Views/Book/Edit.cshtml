@model MVCDemo.Models.Book

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Edit Book</h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Title)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Summary, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Summary, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Summary)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Author, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Author, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Author)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Publisher, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Publisher, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Publisher)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.BookGenreId, null, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-sm-9">
                    @Html.DropDownList("BookGenreId", null, htmlAttributes: new { @class = "form-control required" })
                   @Html.ValidationMessageFor(m => m.BookGenreId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <span id="progress" class="text-center" style="display: none;">
            <img src="/images/wait.gif" alt="wiat" />
            Wait..
        </span>

        <input class="btn btn-primary" type="submit" value="Save" />
        <button class="btn btn-warning" data-dismiss="modal">Close</button>
    </div>
}
<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

