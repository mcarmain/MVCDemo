<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Demo Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Demo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li> @Html.Raw("<a href='/home/index" + "' title='Home'> <span class='glyphicon glyphicon-home'> </span> </a>")</li>
                    <li> @Html.Raw("<a href='/home/about" + "' title='About'> <span class='glyphicon glyphicon-question-sign'> </span> </a>")</li>
                    <li> @Html.Raw("<a href='/home/contact" + "' title='Contact'> <span class='glyphicon glyphicon-user'> </span> </a>")</li>
                    @if (Request.IsAuthenticated)
                    {
                   
                    <li> @Html.Raw("<a href='/item/index" + "' title='Items'> <span class='glyphicon glyphicon-cloud'> </span> </a>")</li>
                    <li> @Html.Raw("<a href='/item2/index" + "' title='Items'> <span class='glyphicon glyphicon-flash'> </span> </a>")</li>
                    <li> @Html.Raw("<a href='/item2/index2" + "' title='Items'> <span class='glyphicon glyphicon-star'> </span> </a>")</li>
                    <li> @Html.Raw("<a href='/book/index" + "' title='Books'> <span class='glyphicon glyphicon-book'> </span> </a>")</li>
                    <li> @Html.Raw("<a href='/phone/index" + "' title='Phone'> <span class='glyphicon glyphicon-phone'> </span> </a>")</li>
                    <li> @Html.Raw("<a href='/task/index" + "' title='Task'> <span class='glyphicon glyphicon-list-alt'> </span> </a>")</li>

                    <li> @Html.Raw("<a data-modal='' href='/clear/clear" + "' title='Clear'> <span class='glyphicon glyphicon-trash'> </span> </a>")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        <div id="body" class="container">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Demo Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
